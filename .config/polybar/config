; =====================================================
; displays number of packages available updates
[module/updates]
type = custom/script
exec = "pacman -Qqu | wc -l"
tail = true
interval = 90
format-prefix = Ôë¶  Ôíû
#format-underline = #764514
format-underline = ${colors.yellow}
label = %{A:exo-open --launch TerminalEmulator:}ÔÄ° %output% %{A}
; -e "pacman -Qu"
;format-background = #268bd2
;click-left = echo left %counter%
;click-middle = echo middle %counter%
;click-right = echo right %counter%

; =====================================================
; displays available disk space
[module/freespace]
type = custom/script
;exec = "du -sh /home"
exec = "df -h --output=avail /dev/sda2 | sed 1d"
tail = true
interval = 15
format-prefix = "ÔÇ† "
format-underline = ${colors.red}

[module/freespace_home]
type = custom/script
;exec = "du -sh /home"
exec = "df -h --output=avail /dev/sdb1 | sed 1d"
tail = true
interval = 15
format-prefix = "ÔÄá "
format-underline = #268bd2

[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024
format-prefix = "ÔÖº "

